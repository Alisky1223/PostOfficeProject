@page "/"
@using MudBlazor
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<MudMainContent>
  
    <MudContainer MaxWidth="MaxWidth.Large" Class="my-8">
     
        <MudPaper Class="hero-banner service-card pa-8 mb-8" Elevation="5">
          
            <MudGrid>
             
                <MudItem xs="12" sm="10">
                
                    <MudText Typo="Typo.h3" Class="mb-4">Fast And Safe Shipping</MudText>
               
                    <MudText Typo="Typo.body1" Class="mb-6">Send Your Packages At The Speed Of Light With Postmodern. Real-time Tracking And Guaranteed Delivery!</MudText>
                  
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.LocalShipping" Size="Size.Large" OnClick="GoToPostOffices">
                      
                        PostOffices
               
                    </MudButton>
              
                </MudItem>
             
                <MudItem xs="12" sm="2">
             
                    <MudImage Src="img/PostOffice.png" Class="hero-image" Width="100" Height="100" />
             
                </MudItem>
          
            </MudGrid>
       
        </MudPaper>
      
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-6 services-title">Our Services</MudText>
     
        <MudGrid Spacing="4" Justify="Justify.Center">
          
            <MudItem xs="12" sm="6" md="4">
               
                <MudCard Class="service-card service-domestic pa-4" Elevation="3">
                 
                    <MudImage Src="img/Delivery.png" Class="hero-image" Width="100" Height="100" />

                    <MudCardContent>
                     
                        <MudText Typo="Typo.h6" Class="mb-2">Internal Shipping</MudText>
                     
                        <MudText Typo="Typo.body2" Color="Color.Primary">Fast Delivery Nationwide</MudText>
                  
                    </MudCardContent>
                 
                    <MudCardActions>
                       
                        <MudButton Variant="Variant.Filled" Color="Color.Error">Details</MudButton>

                    </MudCardActions>
             
                </MudCard>
          
            </MudItem>
           
            <MudItem xs="12" sm="6" md="4">
              
                <MudCard Class="service-card service-international pa-4" Elevation="3">
                 
                    <MudImage Src="img/WorldDelivery.png" Class="hero-image" Width="100" Height="100" />

                    <MudCardContent>
                     
                        <MudText Typo="Typo.h6" Class="mb-2">International Shipping‌</MudText>
                     
                        <MudText Typo="Typo.body2" Color="Color.Primary">To All Parts Of The World</MudText>
                  
                    </MudCardContent>
                   
                    <MudCardActions>
                  
                        <MudButton Variant="Variant.Filled" Color="Color.Error">Details</MudButton>

                    </MudCardActions>
              
                </MudCard>
            </MudItem>
           
            <MudItem xs="12" sm="6" md="4">
               
                <MudCard Class="service-card service-tracking pa-4" Elevation="3">
                  
                    <MudImage Src="img/Map.png" Class="hero-image" Width="100" Height="100" />

                    <MudCardContent>
                      
                        <MudText Typo="Typo.h6" Class="mb-2">Online Tracking</MudText>
                      
                        <MudText Typo="Typo.body2" Color="Color.Primary">Instant Tracking</MudText>
                   
                    </MudCardContent>
                   
                    <MudCardActions>
                      
                        <MudButton Variant="Variant.Filled" Color="Color.Error">Details</MudButton>
                    
                    </MudCardActions>
               
                </MudCard>
            
            </MudItem>
      
        </MudGrid>

        <MudPaper Class="quick-track service-card tracking_paper pa-6 mt-8" Elevation="2">

            <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Fast Tracking</MudText>

            <MudGrid Class="d-flex align-center justify-center">

                <MudItem xs="12" md="5">

                    <MudTextField @bind-Value="trackCode" Label="Tracking Code" Variant="Variant.Outlined" Placeholder="Search Your Codes" Adornment="@Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" AdornmentAriaLabel="Search" />

                </MudItem>

                <MudItem xs="12" md="3">

                    <MudButton Variant="Variant.Filled" Color="Color.Warning" FullWidth Size="Size.Large">

                        Search

                    </MudButton>

                </MudItem>     

            </MudGrid>

        </MudPaper>

        <MudGrid Class="mt-8 stats-grid" Spacing="4">

            <MudItem xs="12" sm="4">

                <MudPaper Class="stat-card service-card stat-packages pa-4 text-center" Elevation="1">

                    <MudText Typo="Typo.h3">1M+</MudText>

                    <MudText Typo="Typo.body1">Packet Sent</MudText>

                </MudPaper>

            </MudItem>

            <MudItem xs="12" sm="4">

                <MudPaper Class="stat-card service-card stat-satisfaction pa-4 text-center" Elevation="1">

                    <MudText Typo="Typo.h3">99%</MudText>

                    <MudText Typo="Typo.body1">Customer Satisfaction</MudText>

                </MudPaper>
            </MudItem>

            <MudItem xs="12" sm="4">

                <MudPaper Class="stat-card service-card stat-support pa-4 text-center" Elevation="1">

                    <MudText Typo="Typo.h3">24/7</MudText>

                    <MudText Typo="Typo.body1">Support</MudText>

                </MudPaper>

            </MudItem>
        </MudGrid>

    </MudContainer>

</MudMainContent>

<style>

    /* پس‌زمینه کل صفحه - آبی-سبز برای اعتماد و سرعت */
    html, body {
        background: linear-gradient(135deg, #007BFF 0%, #28A745 100%);
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    /* Hero Banner */
    .hero-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 16px;
    }

    .hero-image {
        border-radius: 12px;
    }

    /* Services Grid */
    .services-title {
        color: #2c3e50;
        font-weight: bold;
    }

    .service-card {
        transition: transform 0.3s ease-in-out;
        border-radius: 12px;
        overflow: hidden;
    }

        .service-card:hover {
            transform: scale(1.05);
        }

    .service-domestic {
        background: linear-gradient(135deg, #4ECDC4, #44A08D);
        color: white;
    }

        .service-domestic .mud-card-content {
            color: white;
        }

        .service-domestic .mud-button-text {
            color: white !important;
        }

    .service-international {
        background: linear-gradient(135deg, #45B7D1, #96CEB4);
        color: white;
    }

        .service-international .mud-card-content {
            color: white;
        }

        .service-international .mud-button-text {
            color: white !important;
        }

    .service-tracking {
        background: linear-gradient(135deg, #96CEB4, #FECA57);
        color: white;
    }

        .service-tracking .mud-card-content {
            color: white;
        }

        .service-tracking .mud-button-text {
            color: white !important;
        }

    .service-media {
        border-radius: 8px;
    }

    /* Quick Track Section */
    .quick-track {
        border-radius: 12px;
        background-color: #f8f9fa;
        backdrop-filter: blur(10px);
    }

    /* Stats Cards */
    .stats-grid .stat-card {
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        color: white;
    }

    .stat-packages {
        background: linear-gradient(45deg, #FF6B6B, #4ECDC4);
    }

    .stat-satisfaction {
        background: linear-gradient(45deg, #A8E6CF, #88D8A3);
    }

    .stat-support {
        background: linear-gradient(45deg, #FF8E53, #FE6D73);
    }

    .tracking_paper{
        background: linear-gradient(135deg, #11998e, #38ef7d);
        color: white;
    }

    /* Responsive برای موبایل */
    @@media (max-width: 600px) {
        .service-card:hover {
            transform: none;
        }

        .hero-banner {
            padding: 1rem !important;
        }
    }

</style>

@code {

    private string trackCode = "";

    private void GoToPostOffices()
    {
        NavigationManager.NavigateTo("/PostOffice");
    }

}
