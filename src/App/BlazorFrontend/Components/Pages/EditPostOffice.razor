@page "/EditPostOffice"
@using MudBlazor
@using System.Threading
@using System.Reflection
@using System.Net.Http.Json
@using System.Globalization
@using System.Diagnostics.Metrics
@using PostOfficeBackendProject.src.Application.Dto
@using PostOfficeFrontendProject__all_interactive.Interface
@using PostOfficeFrontendProject__all_interactive.Service
@inject HttpClient httpClient
@inject NavigationManager NavigationManager
@inject NotificationService notificationService
@inject ISnackbar Snackbar
@inject IDataPassHelper dataHelper
@inject IDialogService DialogService
@inject IPostOfficeMiddelware postOfficeMiddelware

<MudItem Class="d-flex align-center justify-center mud-theme-primary mud-elevation-25" Style="height:60px; width:100%; margin-top:0px; margin-bottom:20px;">
    <MudText Typo="Typo.h5">Edit Post Office</MudText>
</MudItem>

<MudForm @ref="form">

    <MudPaper Class="d-flex flex-wrap align-start justify-center gap-4" Style="margin-bottom:20px;padding:20px" Elevation="25">

        <MudItem Style="width:20%">
            <MudTextField @bind-Value="EditedPostOffice.OfficeAccessCode" Label="OfficeAccessCode" Variant="Variant.Outlined" Immediate="true" Required></MudTextField>
        </MudItem>

        <MudItem Style="width:20%">
            <MudTextField @bind-Value="EditedPostOffice.OfficeName" Label="OfficeName" Variant="Variant.Outlined" Immediate="true" Required></MudTextField>
        </MudItem>

        <MudItem Style="width:20%">
            <MudTextField @bind-Value="EditedPostOffice.Address" Label="Address" Variant="Variant.Outlined" Immediate="true" Required></MudTextField>
        </MudItem>

        <MudItem Style="width:20%">
            <MudTextField @bind-Value="EditedPostOffice.StorageCapacity" Label="StorageCapacity" Variant="Variant.Outlined" Immediate="true" Required></MudTextField>
        </MudItem>

    </MudPaper>

</MudForm>

<MudPaper Elevation="0" Class="d-flex align-center" Style="margin-top:20px">

    <MudButton Style="margin-right:10px" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" OnClick="EditCorreector">Save</MudButton>

    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Large" OnClick="CanceleOpration">Cancel</MudButton>

    <MudButton Class="main-button" Variant="Variant.Filled" Color="Color.Tertiary" Size="Size.Large" OnClick="GoToMainPage">Main Page</MudButton>

</MudPaper>

<style>

    .main-button {
        position: fixed;
        right: 15px;
    }

</style>

@code {

    #region Props

    private MudForm form;

    private PostOfficeDto EditedPostOffice = new PostOfficeDto();

    protected override async Task OnInitializedAsync()
    {
        await GetData();
    }

    #endregion

    #region LoadOffice

    private async Task GetData()
    {
        try
        {
            var apiResponse = await postOfficeMiddelware.GetByIdAsync(dataHelper.GetPostOfficeId());

            if (apiResponse.Success && apiResponse.Data != null)
            {
                EditedPostOffice = apiResponse.Data;
                notificationService.ShowSuccess(apiResponse.Message ?? "Load Success.");
            }
            else
            {

                var errorMsg = string.IsNullOrEmpty(apiResponse.Message)
                    ? string.Join(", ", apiResponse.Errors ?? new List<string>())
                    : apiResponse.Message;
                notificationService.ShowError(errorMsg ?? "Error To Load.");
                EditedPostOffice = null;
            }
        }
        catch (Exception ex)
        {
            notificationService.ShowError($"Unexpected Error: {ex.Message}");
            EditedPostOffice = null;
        }

        StateHasChanged();
    }

    #endregion

    #region SubmitOrCancele

    private async Task EditCorreector()
    {
        await form.Validate();

        if (form.IsValid)
        {
            var update = new PostOfficeUpdateAndCreateDto
                {
                    OfficeAccessCode = EditedPostOffice.OfficeAccessCode,
                    OfficeName = EditedPostOffice.OfficeName,
                    Address = EditedPostOffice.Address,
                    StorageCapacity = EditedPostOffice.StorageCapacity,
                };


            await postOfficeMiddelware.UpdatePostOfficeAsync(dataHelper.GetPostOfficeId(), update);

            Snackbar.Add("Changes Saved.", Severity.Success);

            NavigationManager.NavigateTo("/PostOffice");
        }

        else
        {
            Snackbar.Add("Please Fill The Necessary field", Severity.Error);
        }
    }

    private void CanceleOpration()
    {

        NavigationManager.NavigateTo("/PostOffice");

    }

    #endregion

    #region GoToMainPage

    private void GoToMainPage()
    {

        NavigationManager.NavigateTo("/");

    }

    #endregion

}

