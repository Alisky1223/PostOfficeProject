@page "/AddPostMan"
@using CommonDll.Dto
@using MudBlazor
@using System.Net.Http.Json
@using System.Globalization
@using System.Reflection
@using System.Threading
@using System.Diagnostics.Metrics
@using PostOfficeBackendProject.src.Application.Dto
@using PostOfficeFrontendProject__all_interactive.Interface
@inject HttpClient httpClient
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@inject IDataPassHelper dataHelper
@inject IDialogService DialogService
@inject IPostManMiddleware postManMiddleware

    <MudItem Class="d-flex align-center justify-center mud-theme-primary mud-elevation-25" Style="height:60px; width:100%; margin-top:0px; margin-bottom:20px;">

        <MudText Typo="Typo.h5">Add PostMan</MudText>

    </MudItem>

    <MudForm @ref="form">

        <MudPaper Class="d-flex flex-wrap align-start justify-center gap-4" Style="margin-bottom:20px;padding:20px" Elevation="25">

            <MudItem Style="width:20%">

                <MudTextField @bind-Value="addPostMan.UserId" Label="UserId" Variant="Variant.Outlined" Immediate="true" Required></MudTextField>

            </MudItem>

            <MudItem Style="width:20%">

                <MudTextField @bind-Value="addPostMan.PersonalCode" Label="PersonalCode" Variant="Variant.Outlined" Immediate="true" Required></MudTextField>

            </MudItem>

        </MudPaper>

    </MudForm>

    <MudPaper Elevation="0" Class="d-flex align-center" Style="margin-top:20px">

        <MudButton Style="margin-right:20px" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" OnClick="AddPostman">Save</MudButton>

        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Large" OnClick="CanceleOpration">Cancel</MudButton>

        <MudButton Class="main-button" Variant="Variant.Filled" Color="Color.Tertiary" Size="Size.Large" OnClick="GoToMainPage">MainPage</MudButton>

    </MudPaper>

<style>

    .main-button {
        position: fixed;
        right: 15px;
    }

</style>

@code {

    #region Props

    private MudForm form;

    private PostManDto addPostMan = new PostManDto();

    #endregion

    #region SubmitOrCancele

    private async Task AddPostman()
    {

        await form.Validate();

        if (form.IsValid)
        {

            var create = new PostmanUpdateAndCreateDto
                {
                    UserId = addPostMan.UserId,
                    PersonalCode = addPostMan.PersonalCode,
                };

            await postManMiddleware.CreatePostManAsync(create);

            Snackbar.Add("Changes Saved", Severity.Success);

            NavigationManager.NavigateTo("/PostMan");
        }

        else
        {
            Snackbar.Add("Please Fill All Required Fields", Severity.Error);
        }
    }

    private void CanceleOpration()
    {

        NavigationManager.NavigateTo("/PostMan");

    }

    #endregion

    #region GoToMainPage

    private void GoToMainPage()
    {

        NavigationManager.NavigateTo("/");

    }

    #endregion

}

